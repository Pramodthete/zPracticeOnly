
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignIn</title>
</head>
<body>
    <form action="/Auth/AfterSignIn" method="post">  
        <h1 style="color:goldenrod;">@ViewBag.Message</h1>
        <center>
            <table>
                <tr>
                    <td>UserName</td>
                    <td>
                        <input type="text" name="Username" value="" />
                    </td>
                </tr>
                <tr>
                    <td>Password</td>
                    <td>
                        <input type="text" name="Password" value="" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" name="btn" value="Log In" />
                    </td>
                </tr>

            </table>
            <div style="color:red">
                @ViewBag.Message
            </div>
        </center>

    </form>
</body>
</html>
